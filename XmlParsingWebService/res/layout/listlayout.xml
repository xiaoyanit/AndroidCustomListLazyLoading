<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:background="#3333">
	<TextView android:layout_height="wrap_content"
		android:id="@+id/titleView"
		android:text="Title" android:layout_width="wrap_content"
		android:textSize="24dp" android:typeface="monospace"  android:layout_margin="2dp" android:textColor="#fff" android:textStyle="bold" android:layout_centerHorizontal="true"/>
		<ImageView android:layout_below = "@+id/titleView" android:id="@+id/imageView"
		android:layout_centerHorizontal="true" android:layout_height="170px" android:layout_width="170px" android:layout_margin="10dp"/>
		<TextView android:layout_height="wrap_content"
		android:layout_below="@+id/imageView" android:id="@+id/artistView"
		android:text="Artist" android:layout_width="wrap_content"
		android:textSize="20dp" android:typeface="monospace"  android:layout_margin="2dp" android:textColor="#fff" android:layout_centerHorizontal="true"/>
		<TextView android:layout_height="wrap_content"
		android:layout_below="@+id/artistView" android:id="@+id/priceView"
		android:text="Price" android:layout_width="wrap_content"
		android:textSize="20dp" android:typeface="monospace"  android:layout_margin="2dp" android:textColor="#fff" android:layout_centerHorizontal="true"/>
		<TextView android:layout_height="wrap_content"
		android:layout_below="@+id/priceView" android:id="@+id/releaseDateView"
		android:text="Released Date" android:layout_width="wrap_content"
		android:textSize="20dp" android:typeface="monospace"  android:layout_margin="2dp" android:textColor="#fff" android:layout_centerHorizontal="true"/>
</RelativeLayout>
